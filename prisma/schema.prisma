generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

model Fornecedor {
  id                Int      @id @default(autoincrement())
  tipoPessoa        String
  nome              String
  cpf               String?  // O CPF pode ser nulo
  dataNascimento    DateTime?
  telefone          String?
  cnpj              String?  // O CNPJ pode ser nulo
  fantasia          String?
  abertura          DateTime?
  situacao          String?
  tipo              String?
  porte             String?
  natureza_juridica String?
  cep               String?
  logradouro        String?
  bairro            String?
  localidade        String?
  uf                String?
  email    String?  
}

model Insumo {
  id          Int      @id @default(autoincrement())
  nome        String
  codigo      String
  descricao   String?  
  quantidade  Int
  preco       Float
  createdAt   DateTime @default(now())
}
